{
  "name": "quit-smoking-app",
  "version": "1.0.0",
  "private": true,
  "description": "Quit Smoking Mobile Application - Monorepo",
  "workspaces": [
    "backend",
    "mobile"
  ],
  "scripts": {
    "backend": "npm run dev --workspace=backend",
    "mobile": "npm start --workspace=mobile",
    "test": "npm test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
